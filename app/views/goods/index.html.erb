<div class="container-fluid">
  <div class="panel-heading">

    <div style="float:left">
      <%= t('.revenue') %>
    </div>

    <div style="float:right">
      <%= t('.from') %>
      <%= text_field_tag :from  %>

      <%= t('.to') %>
      <%= text_field_tag :to %>

      <%= link_to t('.refresh'), sales_path, class: 'refresh-link btn btn-success' %>
    </div>

  </div>

  <hr>

  <div class="panel-body">
    <% if @goods.any? %>

      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th><%= Goods.human_attribute_name('title') %></th>
            <th><%= Goods.human_attribute_name('revenue') %></th>
          </tr>
        </thead>

        <tbody>
          <% @goods.each do |goods| %>
            <tr>
              <td><%= goods.title %></td>
              <td><%= goods.revenue %></td>
            </tr>
          <% end %>
          <td><strong><%= t('.total') %></strong></td>
          <td><strong><%= @goods.sum(:revenue) %></strong></td>
        </tbody>
      </table>

    <% end %>
  </div>
</div>
